{
  "name": "Sticky Region Overlay",
  "description": "Draw a rectangle; an overlay stays glued to that region when you scroll/resize.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["scripting", "activeTab", "tabs", "clipboardRead", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Sticky Overlay"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "web_accessible_resources": [{
    "resources": ["html2canvas.min.js"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "start-selection": {
      "suggested_key": { "default": "Alt+S", "mac": "Alt+S" },
      "description": "Start region selection"
    },
    "clear-all-overlays": {
      "suggested_key": { "default": "Alt+C", "mac": "Alt+C" },
      "description": "Clear all overlays"
    }
  }
}
